<h2>Blocks</h2>
{{#if showBlocks}}
  <button {{action "toggleBlocks"}}>Hide</button>
  <div class="blocks">
    {{#each blocks as |block|}}
      <div>
        {{input value=block.name}}
        <img src={{block.src}} alt="Pokemon block {{block.row}} {{block.column}}" width="60px" height="60px">
        <button {{action "save" block}}>Save</button>
      </div>
    {{/each}}
  </div>
{{else}}
  <button {{action "toggleBlocks"}}>Show</button>
{{/if}}
<br>
<div class="tiles">
<h2>Tiles</h2>
{{#if showTiles}}
  <button {{action "toggleTiles"}}>Hide</button>
  {{#each tiles as |tile|}}
    <div class="tile">
      name: {{tile.name}}
    </div>
      <img src={{tile.src}} alt="Pokemon tile {{tile.row}} {{tile.column}}" width="60px" height="60px">
      <button {{action "removeTile" tile}}>Remove</button>
  {{/each}}
{{else}}
  <button {{action "toggleTiles"}}>Show</button>
{{/if}}
</div>

