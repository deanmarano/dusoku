<div class="game">
  <div class="difficulty">{{difficulty}}</div>
  <div class="timer">{{timeElapsed}}</div>
  {{#each grid as |row|}}
    <div class="row">
      {{#each row as |cell|}}
        <div class="cell {{if cell.error "error"}} {{if (and cell.displayValue (and currentlySelectedCell.displayValue (eq cell.value currentlySelectedCell.displayValue))) "same-value"}} {{if cell.given "given"}} {{if cell.selected "selected"}}" {{action "select" cell}} role="button">
          {{#if cell.displayValue}}
            <div class="guess">
              {{cell.displayValue}}
            </div>
          {{else}}
            <div class="hints">
              <div class="hint-row">
                <span class={{if (array-contains cell.hints 1) "shown"}}>{{t "components.sudoku-grid.1"}}</span>
                <span class={{if (array-contains cell.hints 2) "shown"}}>{{t "components.sudoku-grid.2"}}</span>
                <span class={{if (array-contains cell.hints 3) "shown"}}>{{t "components.sudoku-grid.3"}}</span>
              </div>
              <div class="hint-row">
                <span class={{if (array-contains cell.hints 4) "shown"}}>{{t "components.sudoku-grid.4"}}</span>
                <span class={{if (array-contains cell.hints 5) "shown"}}>{{t "components.sudoku-grid.5"}}</span>
                <span class={{if (array-contains cell.hints 6) "shown"}}>{{t "components.sudoku-grid.6"}}</span>
              </div>
              <div class="hint-row">
                <span class={{if (array-contains cell.hints 7) "shown"}}>{{t "components.sudoku-grid.7"}}</span>
                <span class={{if (array-contains cell.hints 8) "shown"}}>{{t "components.sudoku-grid.8"}}</span>
                <span class={{if (array-contains cell.hints 9) "shown"}}>{{t "components.sudoku-grid.9"}}</span>
              </div>
            </div>

          {{/if}}
        </div>
      {{/each}}
    </div>
  {{/each}}
</div>

<div class="buttons">
  <div class="row">
    <button {{action "stepBack"}}>{{t "components.sudoku-grid.back"}}</button>
    <button {{action "selectNumber" 1}}>{{t "components.sudoku-grid.1"}}</button>
    <button {{action "selectNumber" 2}}>{{t "components.sudoku-grid.2"}}</button>
    <button {{action "selectNumber" 3}}>{{t "components.sudoku-grid.3"}}</button>
    <button {{action "checkPuzzle"}}>{{t "components.sudoku-grid.check"}}</button>
  </div>
  <div class="row">
    <button {{action "stepForward"}}>{{t "components.sudoku-grid.next"}}</button>
    <button {{action "selectNumber" 4}}>{{t "components.sudoku-grid.4"}}</button>
    <button {{action "selectNumber" 5}}>{{t "components.sudoku-grid.5"}}</button>
    <button {{action "selectNumber" 6}}>{{t "components.sudoku-grid.6"}}</button>
  </div>
  <div class="row">
    <button {{action "inverseSelection"}}>{{t "components.sudoku-grid.invert"}}</button>
    <button {{action "selectNumber" 7}}>{{t "components.sudoku-grid.7"}}</button>
    <button {{action "selectNumber" 8}}>{{t "components.sudoku-grid.8"}}</button>
    <button {{action "selectNumber" 9}}>{{t "components.sudoku-grid.9"}}</button>
    <button {{action "clearCell"}}>{{t "components.sudoku-grid.clear"}}</button>
  </div>
</div>

